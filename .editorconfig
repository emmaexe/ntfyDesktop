# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[app/src/**.{cpp,hpp}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.txt]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
