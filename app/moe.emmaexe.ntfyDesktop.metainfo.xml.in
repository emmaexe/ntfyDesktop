<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>moe.emmaexe.ntfyDesktop</id>

  <name>Ntfy Desktop</name>
  <summary>@CPACK_PACKAGE_DESCRIPTION_SUMMARY@</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <description>
    <p>
      @CPACK_PACKAGE_DESCRIPTION@
    </p>
  </description>

  <developer id="moe.emmaexe">
    <name>emmaexe</name>
  </developer>

  <url type="bugtracker">@CMAKE_PROJECT_HOMEPAGE_URL@issues/</url>
  <url type="homepage">@CMAKE_PROJECT_HOMEPAGE_URL@</url>
  <url type="contribute">@CMAKE_PROJECT_HOMEPAGE_URL@</url>

  <launchable type="desktop-id">moe.emmaexe.ntfyDesktop.desktop</launchable>

  <icon type="stock">moe.emmaexe.ntfyDesktop</icon>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/emmaexe/ntfyDesktop/main/assets/screenshot1.png</image>
      <caption>The main window of the app</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/emmaexe/ntfyDesktop/main/assets/screenshot2.png</image>
      <caption>The notification history window</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/emmaexe/ntfyDesktop/main/assets/screenshot3.png</image>
      <caption>The preferences window</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/emmaexe/ntfyDesktop/main/assets/screenshot4.png</image>
      <caption>The main window on first launch</caption>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#6fbcab</color>
    <color type="primary" scheme_preference="dark">#196353</color>
  </branding>

  <content_rating type="oars-1.1" />

    <categories>
      <category>Utility</category>
      <category>Network</category>
    </categories>

    <keywords>
      <keyword>notifications</keyword>
      <keyword>ntfy</keyword>
    </keywords>

  <releases>
    <release version="1.5.1" date="2025-08-05">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.5.1</url>
      <description>
        <p>Release v1.5.1</p>
          <ul>
            <li>Updated metadata</li>
            <li>Spelling fixes</li>
            <li>Mitigate hanging threads bug</li>
            <li>Added Ntfy Desktop to the Arch User Repository</li>
            <li>Added support for aarch64</li>
          </ul>
      </description>
    </release>
    <release version="1.5.0" date="2025-07-19">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.5.0</url>
      <description>
        <p>Release v1.5.0</p>
          <ul>
            <li>Added preferences window</li>
            <li>Moved notification history preferences to preferences window</li>
            <li>Added startup and error notification preferences (option to disable)</li>
            <li>Added reconnect preferences (how/when to retry if connection is lost)</li>
            <li>Fixed some UI inconsistencies (tooltips, What's This?)</li>
          </ul>
      </description>
    </release>
    <release version="1.4.0" date="2025-02-02">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.4.0</url>
      <description>
        <p>Release v1.4.0</p>
          <ul>
            <li>Introduced notification history</li>
            <li>Added support for websockets</li>
            <li>Added a button to pull all notifications from the server</li>
            <li>Fixed bug where notifications continuously get repeated on restart</li>
          </ul>
      </description>
    </release>
    <release version="1.3.2" date="2025-01-11">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.3.2</url>
      <description>
        <p>Release v1.3.2</p>
          <ul>
            <li>Fixed bug preventing the database file from being created, breaking a lot of functionality</li>
          </ul>
      </description>
    </release>
    <release version="1.3.1" date="2025-01-11">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.3.1</url>
      <description>
        <p>Release v1.3.1</p>
          <ul>
            <li>Fixed bug that did not allow domains with hyphens to be used in the UI</li>
          </ul>
      </description>
    </release>
    <release version="1.3.0" date="2025-01-01">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.3.0</url>
      <description>
        <p>Release v1.3.0</p>
          <ul>
            <li>Added support for authentication</li>
            <li>Fixed crash when an invalid ntfy:// url was passed to the application</li>
            <li>The app now responds to the ntfy:// protocol even if it wasn't running before</li>
          </ul>
      </description>
    </release>
    <release version="1.2.0" date="2024-10-22">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.2.0</url>
      <description>
        <p>Release v1.2.0</p>
          <ul>
            <li>Added a notification source testing system</li>
            <li>Added the ability to reorder notification sources</li>
            <li>Import system for ntfy android backups</li>
            <li>Added support for Flatpak</li>
            <li>Added proper Ubuntu support</li>
          </ul>
      </description>
    </release>
    <release version="1.1.0" date="2024-09-29">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.1.0</url>
      <description>
        <p>Release v1.1.0</p>
          <ul>
            <li>Added a HTTP/HTTPS toggle for notification sources</li>
            <li>Added a restart button to the main UI</li>
            <li>The app now gracefully handles shutdowns via unix signals</li>
            <li>Limit the number retries after failed connections</li>
          </ul>
      </description>
    </release>
    <release version="1.0.0" date="2024-09-19">
      <url type="details">https://github.com/emmaexe/ntfyDesktop/releases/tag/v1.0.0</url>
      <description>
        <p>First release</p>
          <ul>
            <li>Created the first release of the app</li>
          </ul>
      </description>
    </release>
  </releases>
</component>